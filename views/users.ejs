    <section id="heros" class="heros">
        <img src="./css/imagens/Design sem nome (18).png" alt="" data-aos="fade-in">
        <div class="container">
            <div class="row">
                <div class="col-lg-10">
                    <h2 data-aos="fade-up" data-aos-delay="100">Faça uma pesquisa</h2>
                    <p data-aos="fade-up" data-aos-delay="200">Use esse campo para encontrar algum usuário ou ONG cadastrada no sistema.</p>
                </div>
            <div class="col-lg-5">
                <form class="sign-up-form d-flex">
                <input type="text" id="searchInput" class="form-control" placeholder="Pesquisar por nome..."/>
                <button type="button" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
                </form>
            </div>
            </div>
        </div>
    </section>

    <script>
        function filterUsers(filter) {
            var users = document.querySelectorAll(".card");
            for (var i = 0; i < users.length; i++) {
                var userName = users[i].querySelector("h3").innerText.toUpperCase();
                if (userName.indexOf(filter) > -1) {
                    users[i].style.display = "";
                } else {
                    users[i].style.display = "none";
                }
            }
        }

        function searchUsers() {
            var input = document.getElementById('searchInput');
            var filter = input.value.toUpperCase();
            filterUsers(filter);
        }

        function resetSearch() {
            document.getElementById('searchInput').value = '';
            filterUsers('');
        }

        document.getElementById('searchInput').addEventListener('input', function () {
            searchUsers();
        });

    </script>

    <div class="container">
        <section class="py-5">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 justify-content-center my-3" id="listaAnimais">
                <% users.forEach(function(user) { %>
                        <div class="card my-3 my-3 mx-3">
                            <a class="card-link mt-3" href="/perfil/<%= user.nome %>/<%= user.id_user %>">
                                <img class="card-img-top" src="/<%= user.imagem %>" onerror="this.src='/img/perfilSemFoto.png';" alt="Sem foto" style="height: 18rem; width: 18rem; object-fit: cover;"/>
                                <div class="card-body p-3">
                                    <div class="text-center">
                                        <h3 class="fw-bolder text-center"><%= user.nome %></h3>
                                    </div>
                                </div>
                                <div class="card-footer p-3 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center">
                                        <a class="btn btn-outline-dark mt-auto bg-info" href="/perfil/<%= user.nome %>/<%= user.id_user %>">Acessar perfil</a>
                                    </div>
                                </div>
                            </a>
                        </div>
                <% }) %>
            </div>
        </section>
    </div>
    
    <%- include('layouts/default/Footer') %>